// memo
// https://www.typescriptlang.org/docs/handbook/migrating-from-javascript.html#early-benefits
{
  "compilerOptions": {
    "outDir": "./public",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "strict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ]
}
